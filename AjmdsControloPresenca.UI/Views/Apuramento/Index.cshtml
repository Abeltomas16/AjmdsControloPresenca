
@model RelPresencaVM
<h2>Apuramento</h2>
<form method="POST">

    <div class="form-group col-md-6 p-0">
        @Html.LabelFor(g => g.FuncionarioId, "Funcionário:")
        @Html.DropDownListFor(g => g.FuncionarioId,
                    new SelectList(ViewBag.Funcionario, "Id", "Nome"),
                    "Selecione...",
                    new { @class = "form-control" }
                    )
        <small>  @Html.ValidationMessageFor(g => g.FuncionarioId, null, new { @class = "text-danger",autofocus = "" })</small>
    </div>

    <div class="form-row">

        <div class="form-group col-md-3">
            @Html.LabelFor(t => t.DataInicial, "De:")
            @Html.TextBoxFor(n => n.DataInicial, new { @class = "form-control", @type = "Date" })
            <small>  @Html.ValidationMessageFor(n => n.DataInicial, null, new { @class = "text-danger" })</small>
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(t => t.DataFinal, "Até")
            @Html.TextBoxFor(n => n.DataFinal, new { @class = "form-control", @type = "Date" })
            <small>  @Html.ValidationMessageFor(n => n.DataFinal, null, new { @class = "text-danger" })</small>
        </div>

    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Processar" />
        <a href="@Url.Action("Index","Home")" class="btn btn-outline-info">Cancelar</a>
    </div>
</form>
@section script{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
}