
@{
    ViewBag.Title = "Justificar";
}

@model JustificarVM

<h2>Editar marcação</h2>

<form method="POST">

    @Html.HiddenFor(h => h.Id)

    <div class="form-row">

        <div class="form-group col-md-6">
            @Html.LabelFor(t => t.Data, "Dia")
            @Html.TextBoxFor(n => n.Data, new { @class = "form-control", @type = "Date", autofocus="", @readonly="" })
            <small>  @Html.ValidationMessageFor(n => n.Data, null, new { @class = "text-danger" })</small>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            @Html.LabelFor(t => t.HoraInicial, "Hora inicial")
            @Html.TextBoxFor(n => n.HoraInicial, new { @class = "form-control", @type = "Time" })
            <small>  @Html.ValidationMessageFor(n => n.HoraInicial, null, new { @class = "text-danger" })</small>
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(t => t.HoraFinal, "Hora Final")
            @Html.TextBoxFor(n => n.HoraFinal, new { @class = "form-control", @type = "Time" })
            <small>  @Html.ValidationMessageFor(n => n.HoraFinal, null, new { @class = "text-danger" })</small>
        </div>

    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Processar" />
        <a href="@Url.Action("Index","Home")" class="btn btn-outline-info">Cancelar</a>
    </div>
</form>
@section script{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
}
