@model PagedList.IPagedList<UsuarioIndexVM>
@{
    ViewBag.Title = "Usuários";
}


<div class="row">
    <div class="col-12">
        <div class="box shadow p-4">
            <div class=" row d-flex justify-content-start px-0 box-header with-border">
                <div class="col-6 text-start">
                    <h3 class="page-title">@ViewBag.Title</h3>
                </div>
                <div class="col-6 text-end">
                    <a href="@Url.Action("Add")" class="m-0 waves-effect waves-light btn btn-warning btn-large"><i class="fa fa-plus"></i> Novo</a>
                </div>
            </div>

            <!-- /.box-header -->
            <div class="box-body no-padding">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="bg-primary">
                                <th scope="col" style="width:40%;">Funcionário</th>
                                <th scope="col" style="width:20%;">Nome Login</th>
                                <th scope="col" style="width:20%;">Senha</th>
                                <th style="width:20%;">Acções</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UsuarioIndexVM user in Model)
                            {
                                <tr id="usuario-@user.Id">
                                    <td>@user.NomeFuncionario</td>
                                    <td>@user.Nome</td>
                                    <td>@user.Senha</td>
                                    <td class="btn-group">
                                        <a class="btn btn-sm btn-outline-success"
                                           href="@Url.Action("Edit",new {Id=user.Id})"><i class="fas fa-edit"></i> Editar</a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="showModal(@user.Id,'@user.Nome')"><i class="fas fa-trash"></i> Excluir</button>
                                    </td>
                                </tr>
                            }
                            <tr class="bg-transparent">
                                <td colspan="2"><b>@Model.Count registros de @Model.TotalItemCount</b></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </div>
</div>


@{
    if (Model.TotalItemCount != Model.Count)
    {
        <div class="row">
            <div class="col-md-12">
                Página @(Model.PageCount<Model.PageNumber? 0 : Model.PageNumber) de @Model.PageCount

                @if (Model.HasPreviousPage)
                {
                    @Html.ActionLink("<<", "Index", new { pagina = 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                    @Html.Raw(" ");
                    @Html.ActionLink("< Anterior", "Index", new { pagina = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                }
                else
                {
                    @:<<
                    @Html.Raw(" ");
                    @:< Anterior
                }

                @if (Model.HasNextPage)
                {
                    @Html.ActionLink("Próxima >", "Index", new { pagina = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                    @Html.Raw(" ");
                    @Html.ActionLink(">>", "Index", new { pagina = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                }
                else
                {
                    @:Próxima >
                    @Html.Raw(" ")
                    @:>>
                }
            </div>
        </div>
    }
}
<div>
    <div data-id="0" class="modal" id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Excluir Usuário</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Desejas excluir o usuário <span id="lblNome"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btnConfirmar">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{

    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
    <script>
        function showModal(Id, Nome) {
            $('#lblNome').text(Nome)
            $('#deleteModal').data('id', Id).modal('show')
        }
        document.querySelector('#btnConfirmar').addEventListener('click', async () => {
            const id = $('#deleteModal').data('id')
            var link = `/Usuario/Delete/${id}`
            var promisse = await fetch(link)
            if (promisse.status == 200) {
                document.querySelector('#usuario-' + id).remove()
                toastr.success('Usuário Excluido com sucesso', 'ALAYPonto')
            } else {
                toastr.error('Falha ao exluir usuário', 'ALAYPonto')
            }
            $('#deleteModal').data('id', '0').modal('hide')
        })

    </script>
}

